<h3>Eat</h3>

<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burgers/burger-block devoure=true}}
        {{/unless}}
    {{/each}}
</ul>

<h3>Eaten</h3>


<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burgers/burger-block devoure=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Hunrgy!<br>
    <input type="radio" name="devoured" value="1"> Full
  </div>

  <button type="submit">Add Burger</button>
</form>